{
  "manifest_version": 3,
  "name": "VoiceD",
  "version": "1.0",
  "description": "converts text files into mp3 audio files dowloaded on your drive",
  "icons": {
    "128": "src/public/icons/icon128.png",
    "16": "src/public/icons/icon16.png",
    "32": "src/public/icons/icon32.png"
  },
  "action": {
    "default_popup": "src/public/html/index.html",
    "default_icon": "src/public/icons/icon16.png"
  },
  "content_scripts": [
    {
      "js": ["src/public/js/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "src/public/js/service-worker.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "activeTab",
    "background",
    "scripting",
    "offscreen"
  ],
  "host_permissions": ["http://127.0.0.1:2000/"]
}
